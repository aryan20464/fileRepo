local.file_match "app_logs" {
  path_targets = [{ __path__ = "/logs/*.log" }]
  forward_to = [loki.process.app.receiver]
}

loki.process "app" {
  forward_to = [loki.write.default.receiver]
}

loki.write "default" {
  endpoint {
    url = "http://loki.loki.svc.cluster.local:3100/loki/api/v1/push"
  }
}
